{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "@configs": ["configs"],
      "@configs/*": ["configs/*"],
      "@application": ["configs/application"],
      "@env": ["configs/env"],
      "@enum": ["configs/enum"],
      "@models": ["app/models"],
      "@views": ["app/views"],
      "@controllers": ["app/controllers"]
    }
  },
  "exclude": ["node_modules", ".nuxt", "dist"]
}
